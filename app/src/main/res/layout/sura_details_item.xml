<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/sura_details_container"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
android:clickable="true">
<RelativeLayout
        android:id="@+id/sura_details_item_context_menu_block"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
android:padding="12dp">
    <ImageView
            android:id="@+id/sura_details_item_context_menu_bookmark"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:clickable="true"
   android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
    android:src="@drawable/bookmark"/>
    <ImageView
            android:id="@+id/sura_details_item_context_menu_share"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_centerInParent="true"
   android:src="@drawable/favoriteicon"
  />
</RelativeLayout>
    <TextView
            android:id="@+id/sura_details_item_aya_ukr"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/sura_details_item_aya_arabic"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>