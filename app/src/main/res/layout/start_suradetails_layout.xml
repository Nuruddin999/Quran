<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
android:background="@drawable/main_list_item_background">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:background="@drawable/main_list_item_background">
        <TextView android:id="@+id/sura_details_title" android:layout_width="match_parent"
                  android:textAlignment="center"
                  android:text="title"
                  android:textStyle="bold"
                  android:padding="10dp"
                  android:layout_height="wrap_content"
        android:textSize="20sp"/>

        <TextView android:id="@+id/sura_details_titleukr" android:layout_width="match_parent"
                  android:textAlignment="center"
                  android:text="titleukr"
                  android:textColor="#a5a5a5"
                  android:paddingBottom="10dp"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView android:id="@+id/sura_details_bismi_arabik" android:layout_width="match_parent"
                  android:textAlignment="center"
                  android:text="bismi"
                  android:padding="10dp"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"/>
        <TextView android:id="@+id/sura_details_bismi_ukr" android:layout_width="match_parent"
                  android:textAlignment="center"
                  android:text="bismiukr"
                  android:paddingBottom="10dp"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>