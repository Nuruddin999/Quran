<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/bookmark_item_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_list_item_background">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"

 >
        <TextView
                android:id="@+id/bookmark_item_suraname"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="name"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"/>

        <TextView
                android:id="@+id/bookmark_item_suratranslation"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="ukr"

                android:layout_below="@id/bookmark_item_suraname"
                android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/bookmark_item_bookmarkbuttonanddate"
            android:orientation="vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
      >
        <ImageView
                android:id="@+id/bookmark_item_bookmarkbutton"
                android:layout_width="wrap_content" android:layout_height="match_parent"
                android:layout_gravity="center" android:src="@drawable/bookmarkforcell"
        />
        <TextView android:id="@+id/bookmark_item_date"
                  android:layout_width="wrap_content" android:layout_height='wrap_content'
                  android:text="date"
       android:layout_marginRight="5dp"
                  android:layout_below="@id/bookmark_item_suraname"/>
    </LinearLayout>



</RelativeLayout>