<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/bookmark_item_layout2"
                android:clickable="true"
                >
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_alignParentBottom="true"

    >
        <TextView
                android:id="@+id/bookmark_item_suraname2"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="name"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"/>

        <TextView
                android:id="@+id/bookmark_item_suratranslation2"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="ukr"

                android:layout_below="@id/bookmark_item_suraname"
                android:layout_marginLeft="12dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                 android:layout_alignParentRight="true"
android:id="@+id/bookmark_item_bookmarkbuttonanddate2"
                  android:layout_alignParentBottom="true"

    >
        <ImageView
                android:id="@+id/bookmark_item_bookmarkbutton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/bookmarkforcell"
                android:layout_marginRight="12dp"


        />
        <TextView android:id="@+id/bookmark_item_date2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="data"
                  android:layout_marginRight="12dp"
                  android:layout_gravity="center"

        />
    </LinearLayout>
</RelativeLayout>