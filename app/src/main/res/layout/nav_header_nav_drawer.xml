<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/navDrawerColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="bottom">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="173dp"
                app:srcCompat="@drawable/qurancaligraphybackground"
                android:id="@+id/imageView"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="@dimen/quranBackWhiteNavdrawerheight"
                   android:paddingBottom="10dp"
                   android:src="@drawable/quranua"
                   android:layout_gravity="center|bottom"/>
    </FrameLayout>




</LinearLayout>
